---

---

<section class="bg-paper-cream px-6 py-24">
    <div class="max-w-screen-xl mx-auto space-y-24">
        <!-- Run Anywhere Matrix -->
        <div>
            <h2
                class="font-serif text-3xl font-bold text-center text-ink-black mb-12"
            >
                Deploy Anywhere. <span
                    class="italic text-slate-gray font-normal">Literally.</span
                >
            </h2>

            <div
                class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-7 gap-8 text-center"
            >
                <!-- CD -->
                <div class="group flex flex-col items-center gap-3">
                    <div
                        class="w-12 h-12 flex items-center justify-center border border-ink-black/20 rounded-full group-hover:border-debian-red-muted transition-colors"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="square"
                            stroke-linejoin="miter"
                        >
                            <circle cx="12" cy="12" r="10"></circle>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                    </div>
                    <span
                        class="font-sans text-xs uppercase tracking-widest text-slate-gray"
                        >CD/DVD</span
                    >
                </div>

                <!-- USB -->
                <div class="group flex flex-col items-center gap-3">
                    <div
                        class="w-12 h-12 flex items-center justify-center border border-ink-black/20 rounded-full group-hover:border-debian-red-muted transition-colors"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="square"
                            stroke-linejoin="miter"
                        >
                            <rect x="8" y="4" width="8" height="16" rx="1"
                            ></rect>
                            <path d="M10 20h4"></path>
                        </svg>
                    </div>
                    <span
                        class="font-sans text-xs uppercase tracking-widest text-slate-gray"
                        >USB</span
                    >
                </div>

                <!-- ISO -->
                <div class="group flex flex-col items-center gap-3">
                    <div
                        class="w-12 h-12 flex items-center justify-center border border-ink-black/20 rounded-full group-hover:border-debian-red-muted transition-colors"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="square"
                            stroke-linejoin="miter"
                        >
                            <path
                                d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"
                            ></path>
                            <polyline points="14 2 14 8 20 8"></polyline>
                            <line x1="12" y1="18" x2="12" y2="12"></line>
                        </svg>
                    </div>
                    <span
                        class="font-sans text-xs uppercase tracking-widest text-slate-gray"
                        >ISO</span
                    >
                </div>

                <!-- VM -->
                <div class="group flex flex-col items-center gap-3">
                    <div
                        class="w-12 h-12 flex items-center justify-center border border-ink-black/20 rounded-full group-hover:border-debian-red-muted transition-colors"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="square"
                            stroke-linejoin="miter"
                        >
                            <rect
                                x="2"
                                y="3"
                                width="20"
                                height="14"
                                rx="2"
                                ry="2"></rect>
                            <line x1="8" y1="21" x2="16" y2="21"></line>
                            <line x1="12" y1="17" x2="12" y2="21"></line>
                        </svg>
                    </div>
                    <span
                        class="font-sans text-xs uppercase tracking-widest text-slate-gray"
                        >VM</span
                    >
                </div>

                <!-- SD Card -->
                <div class="group flex flex-col items-center gap-3">
                    <div
                        class="w-12 h-12 flex items-center justify-center border border-ink-black/20 rounded-full group-hover:border-debian-red-muted transition-colors"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="square"
                            stroke-linejoin="miter"
                        >
                            <path
                                d="M18 20V4a2 2 0 0 0-2-2H8a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2z"
                            ></path>
                            <line x1="12" y1="18" x2="12" y2="18"></line>
                        </svg>
                    </div>
                    <span
                        class="font-sans text-xs uppercase tracking-widest text-slate-gray"
                        >SD Card</span
                    >
                </div>

                <!-- HDD Ext -->
                <div class="group flex flex-col items-center gap-3">
                    <div
                        class="w-12 h-12 flex items-center justify-center border border-ink-black/20 rounded-full group-hover:border-debian-red-muted transition-colors"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="square"
                            stroke-linejoin="miter"
                        >
                            <rect
                                x="4"
                                y="4"
                                width="16"
                                height="16"
                                rx="2"
                                ry="2"></rect>
                            <line x1="12" y1="4" x2="12" y2="20"></line>
                        </svg>
                    </div>
                    <span
                        class="font-sans text-xs uppercase tracking-widest text-slate-gray"
                        >Ext HDD</span
                    >
                </div>

                <!-- HDD Int -->
                <div class="group flex flex-col items-center gap-3">
                    <div
                        class="w-12 h-12 flex items-center justify-center border border-ink-black/20 rounded-full group-hover:border-debian-red-muted transition-colors"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="square"
                            stroke-linejoin="miter"
                        >
                            <path
                                d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"
                            ></path>
                            <line x1="3" y1="6" x2="21" y2="6"></line>
                            <path d="M16 10a4 4 0 0 1-8 0"></path>
                        </svg>
                    </div>
                    <span
                        class="font-sans text-xs uppercase tracking-widest text-slate-gray"
                        >Int HDD</span
                    >
                </div>
            </div>
        </div>

        <!-- Luxury Spec Sheet -->
        <div
            class="grid grid-cols-1 md:grid-cols-2 gap-12 pt-12 border-t border-double border-ink-black/10"
        >
            <!-- Minimum -->
            <div
                class="p-8 border-2 border-dashed border-ink-black/10 relative"
            >
                <span
                    class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-paper-cream px-4 font-serif text-sm italic text-slate-gray"
                    >Minimum Specification</span
                >

                <div class="space-y-8">
                    <div
                        class="flex justify-between items-end border-b border-ink-black/5 pb-2"
                    >
                        <span
                            class="font-sans text-xs uppercase tracking-widest text-slate-gray"
                            >Processor</span
                        >
                        <span
                            class="font-serif text-3xl md:text-4xl text-ink-black font-light leading-none"
                            >1.0 <span class="text-sm align-top ml-1">GHz</span
                            ></span
                        >
                    </div>
                    <div
                        class="flex justify-between items-end border-b border-ink-black/5 pb-2"
                    >
                        <span
                            class="font-sans text-xs uppercase tracking-widest text-slate-gray"
                            >Memory</span
                        >
                        <span
                            class="font-serif text-3xl md:text-4xl text-ink-black font-light leading-none"
                            >768 <span class="text-sm align-top ml-1">MB</span
                            ></span
                        >
                    </div>
                    <div
                        class="flex justify-between items-end border-b border-ink-black/5 pb-2"
                    >
                        <span
                            class="font-sans text-xs uppercase tracking-widest text-slate-gray"
                            >Storage</span
                        >
                        <span
                            class="font-serif text-3xl md:text-4xl text-ink-black font-light leading-none"
                            >4 <span class="text-sm align-top ml-1">GB</span
                            ></span
                        >
                    </div>
                </div>
            </div>

            <!-- Recommended -->
            <div
                class="p-8 border-2 border-double border-ink-black/20 relative bg-white"
            >
                <span
                    class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-white px-4 font-serif text-sm italic text-debian-red-muted font-bold"
                    >Recommended</span
                >

                <div class="space-y-8">
                    <div
                        class="flex justify-between items-end border-b border-ink-black/5 pb-2"
                    >
                        <span
                            class="font-sans text-xs uppercase tracking-widest text-slate-gray"
                            >Processor</span
                        >
                        <span
                            class="font-serif text-3xl md:text-4xl text-ink-black font-light leading-none"
                            >Dual <span class="text-sm align-top ml-1"
                                >Core+</span
                            ></span
                        >
                    </div>
                    <div
                        class="flex justify-between items-end border-b border-ink-black/5 pb-2"
                    >
                        <span
                            class="font-sans text-xs uppercase tracking-widest text-slate-gray"
                            >Memory</span
                        >
                        <span
                            class="font-serif text-3xl md:text-4xl text-ink-black font-light leading-none"
                            >2 <span class="text-sm align-top ml-1">GB+</span
                            ></span
                        >
                    </div>
                    <div
                        class="flex justify-between items-end border-b border-ink-black/5 pb-2"
                    >
                        <span
                            class="font-sans text-xs uppercase tracking-widest text-slate-gray"
                            >Storage</span
                        >
                        <span
                            class="font-serif text-3xl md:text-4xl text-ink-black font-light leading-none"
                            >10 <span class="text-sm align-top ml-1">GB</span
                            ></span
                        >
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
