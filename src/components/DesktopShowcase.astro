---

<section class="py-24 bg-paper-cream overflow-hidden">
    <div class="max-w-screen-xl mx-auto px-6">
        <!-- Section Header -->
        <header class="text-center mb-16 md:mb-32">
            <span
                class="font-mono text-xs font-bold text-slate-gray uppercase tracking-widest mb-4 block"
            >
                The Physicality of Software
            </span>
            <h2
                class="font-serif text-4xl md:text-5xl font-bold text-ink-black"
            >
                A Workspace, <span class="italic text-debian-red-muted"
                    >Materialized</span
                >.
            </h2>
        </header>

        <!-- Dynamic Stack Container -->
        <!-- Group for hover-dimming effect -->
        <div
            class="relative flex flex-col md:flex-row items-center justify-center gap-12 md:gap-0 min-h-[400px] md:h-[600px] group"
        >
            <!-- 2. The Interface (Menu) - Left Offset -->
            <!-- z-10, -translate-x, rotate-2 -->
            <div
                class="w-full md:w-[600px] md:absolute md:left-0 md:translate-x-12 md:rotate-[-2deg] z-10 transition-all duration-700 cubic-bezier(0.4, 0, 0.2, 1) hover:!opacity-100 hover:z-50 hover:scale-105 hover:rotate-0 md:hover:!blur-none md:group-hover:opacity-40 md:group-hover:blur-sm"
            >
                <!-- Window Chrome -->
                <div
                    class="bg-white border border-ink-black/15 shadow-xl rounded-sm overflow-hidden"
                >
                    <!-- Header Bar -->
                    <div
                        class="h-[28px] bg-[#E5E7EB] border-b border-ink-black/10 flex items-center justify-between px-3"
                    >
                        <div class="flex gap-1">
                            <div
                                class="w-[6px] h-[6px] rounded-full bg-ink-black/20"
                            >
                            </div>
                            <div
                                class="w-[6px] h-[6px] rounded-full bg-ink-black/20"
                            >
                            </div>
                            <div
                                class="w-[6px] h-[6px] rounded-full bg-ink-black/20"
                            >
                            </div>
                        </div>
                        <span class="font-mono text-[10px] text-ink-black/40"
                            >[BWP_MENU_02]</span
                        >
                    </div>
                    <!-- Image -->
                    <img
                        src="https://bwpup.puppylinux.com/assets/img/BWP64-768-2.png"
                        alt="BookwormPup Menu Interface"
                        class="w-full h-auto block"
                    />
                </div>
                <!-- Caption -->
                <p
                    class="mt-4 font-serif text-sm text-center md:text-left text-ink-black italic"
                >
                    02. Core Menu Logic
                </p>
            </div>

            <!-- 3. The Sound (Audio) - Right Offset -->
            <!-- z-10, translate-x, rotate-2 -->
            <div
                class="w-full md:w-[600px] md:absolute md:right-0 md:-translate-x-12 md:rotate-[2deg] z-10 transition-all duration-700 cubic-bezier(0.4, 0, 0.2, 1) hover:!opacity-100 hover:z-50 hover:scale-105 hover:rotate-0 md:hover:!blur-none md:group-hover:opacity-40 md:group-hover:blur-sm"
            >
                <!-- Window Chrome -->
                <div
                    class="bg-white border border-ink-black/15 shadow-xl rounded-sm overflow-hidden"
                >
                    <!-- Header Bar -->
                    <div
                        class="h-[28px] bg-[#E5E7EB] border-b border-ink-black/10 flex items-center justify-between px-3"
                    >
                        <div class="flex gap-1">
                            <div
                                class="w-[6px] h-[6px] rounded-full bg-ink-black/20"
                            >
                            </div>
                            <div
                                class="w-[6px] h-[6px] rounded-full bg-ink-black/20"
                            >
                            </div>
                            <div
                                class="w-[6px] h-[6px] rounded-full bg-ink-black/20"
                            >
                            </div>
                        </div>
                        <span class="font-mono text-[10px] text-ink-black/40"
                            >[BWP_AUDIO_03]</span
                        >
                    </div>
                    <!-- Image -->
                    <img
                        src="https://bwpup.puppylinux.com/assets/img/EasyEffects_Equalizer.png"
                        alt="BookwormPup Audio Interface"
                        class="w-full h-auto block"
                    />
                </div>
                <!-- Caption -->
                <p
                    class="mt-4 font-serif text-sm text-center md:text-right text-ink-black italic"
                >
                    03. Advanced Pipewire Audio
                </p>
            </div>

            <!-- 1. The Canvas (Desktop) - Center -->
            <!-- z-20, scale-100 -->
            <div
                class="w-full md:w-[700px] md:relative z-20 transition-all duration-700 cubic-bezier(0.4, 0, 0.2, 1) hover:!opacity-100 hover:z-50 hover:scale-105 md:hover:!blur-none md:group-hover:opacity-40 md:group-hover:blur-sm"
            >
                <!-- Window Chrome -->
                <div
                    class="bg-white border border-ink-black/15 shadow-2xl rounded-sm overflow-hidden"
                >
                    <!-- Header Bar -->
                    <div
                        class="h-[28px] bg-[#E5E7EB] border-b border-ink-black/10 flex items-center justify-between px-3"
                    >
                        <div class="flex gap-1">
                            <div
                                class="w-[6px] h-[6px] rounded-full bg-ink-black/20"
                            >
                            </div>
                            <div
                                class="w-[6px] h-[6px] rounded-full bg-ink-black/20"
                            >
                            </div>
                            <div
                                class="w-[6px] h-[6px] rounded-full bg-ink-black/20"
                            >
                            </div>
                        </div>
                        <span class="font-mono text-[10px] text-ink-black/40"
                            >[BWP_SESSION_01]</span
                        >
                    </div>
                    <!-- Image -->
                    <img
                        src="https://bwpup.puppylinux.com/assets/img/ipad.png"
                        alt="BookwormPup Desktop"
                        class="w-full h-auto block"
                    />
                </div>
                <!-- Caption -->
                <p
                    class="mt-4 font-serif text-sm text-center text-ink-black italic"
                >
                    01. Pristine JWM Desktop
                </p>
            </div>
        </div>
    </div>
</section>
