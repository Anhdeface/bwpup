<section class="bg-ink-black text-paper-cream px-6 py-24 md:py-32">
    <div class="max-w-screen-xl mx-auto">
        <div class="text-center mb-16">
            <h2
                class="font-serif text-4xl md:text-5xl font-bold mb-4 text-paper-cream"
            >
                Get BookwormPup
            </h2>
            <p class="font-sans text-slate-gray text-lg">
                Choose the architecture that matches your hardware.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-16">
            <!-- 64-bit Modern -->
            <div
                class="flex flex-col h-full border border-paper-cream/20 p-8 hover:border-debian-red-muted transition-colors duration-300"
            >
                <div class="mb-4">
                    <span
                        class="px-3 py-1 bg-debian-red-muted text-white text-xs font-bold uppercase tracking-widest"
                        >Recommended</span
                    >
                </div>
                <h3 class="font-serif text-3xl font-bold mb-2">
                    64-bit Modern
                </h3>
                <p class="text-slate-gray mb-8 leading-relaxed">
                    For most computers produced after 2007. Supports UEFI and
                    Secure Boot. Optimized for modern web browsing and
                    performance.
                </p>

                <div class="mt-auto">
                    <div
                        class="font-mono text-sm text-slate-gray mb-4 flex justify-between"
                    >
                        <span>ISO Size: ~800MB</span>
                        <span>Ver: 10.0.6</span>
                    </div>
                    <a
                        href="#"
                        class="block w-full text-center py-5 bg-paper-cream text-ink-black font-sans font-bold text-xl hover:bg-white hover:scale-[1.01] transition-all duration-200"
                    >
                        Download 64-bit ISO
                    </a>
                    <p class="text-xs text-center text-slate-gray mt-3">
                        Mirror: <a href="#" class="underline hover:text-white"
                            >SourceForge</a
                        > &middot; <a
                            href="#"
                            class="underline hover:text-white">GitHub</a
                        >
                    </p>
                </div>
            </div>

            <!-- 32-bit Legacy -->
            <div
                class="flex flex-col h-full border border-paper-cream/20 p-8 hover:border-paper-cream/50 transition-colors duration-300"
            >
                <div class="mb-4">
                    <span
                        class="px-3 py-1 bg-transparent border border-paper-cream/30 text-paper-cream/70 text-xs font-bold uppercase tracking-widest"
                        >Legacy Support</span
                    >
                </div>
                <h3 class="font-serif text-3xl font-bold mb-2">
                    32-bit Legacy
                </h3>
                <p class="text-slate-gray mb-8 leading-relaxed">
                    Specifically for older hardware (Pentium 4, Atom, etc.) or
                    machines restricted to 32-bit architecture.
                </p>

                <div class="mt-auto">
                    <div
                        class="font-mono text-sm text-slate-gray mb-4 flex justify-between"
                    >
                        <span>ISO Size: ~750MB</span>
                        <span>Ver: 10.0.6</span>
                    </div>
                    <a
                        href="#"
                        class="block w-full text-center py-5 bg-transparent border-2 border-paper-cream text-paper-cream font-sans font-bold text-xl hover:bg-paper-cream hover:text-ink-black transition-all duration-200"
                    >
                        Download 32-bit ISO
                    </a>
                    <p class="text-xs text-center text-slate-gray mt-3">
                        Mirror: <a href="#" class="underline hover:text-white"
                            >SourceForge</a
                        > &middot; <a
                            href="#"
                            class="underline hover:text-white">GitHub</a
                        >
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
