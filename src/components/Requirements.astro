<section class="bg-paper-cream px-6 py-24 border-t border-ink-black/10">
    <div class="max-w-screen-md mx-auto">
        <h2
            class="font-serif text-3xl md:text-4xl font-bold text-ink-black mb-12 text-center"
        >
            System Requirements
        </h2>

        <div class="bg-white border border-gray-300 p-8 md:p-12">
            <dl class="divide-y divide-gray-200">
                <!-- CPU -->
                <div class="py-4 grid grid-cols-1 md:grid-cols-3 gap-4">
                    <dt
                        class="font-sans font-bold text-ink-black uppercase tracking-wider text-sm"
                    >
                        Processor
                    </dt>
                    <dd class="md:col-span-2 flex flex-col gap-1">
                        <span class="font-mono text-lg text-ink-black"
                            >1.0 GHz Dual Core</span
                        >
                        <span class="text-sm text-slate-gray"
                            >Recommend 64-bit for modern web browsing.</span
                        >
                    </dd>
                </div>

                <!-- RAM -->
                <div class="py-4 grid grid-cols-1 md:grid-cols-3 gap-4">
                    <dt
                        class="font-sans font-bold text-ink-black uppercase tracking-wider text-sm"
                    >
                        Memory (RAM)
                    </dt>
                    <dd class="md:col-span-2 flex flex-col gap-1">
                        <span class="font-mono text-lg text-ink-black"
                            >1 GB</span
                        >
                        <span class="text-sm text-slate-gray"
                            >Runs comfortably on 2GB+. 768MB absolute minimum.</span
                        >
                    </dd>
                </div>

                <!-- Storage -->
                <div class="py-4 grid grid-cols-1 md:grid-cols-3 gap-4">
                    <dt
                        class="font-sans font-bold text-ink-black uppercase tracking-wider text-sm"
                    >
                        Storage
                    </dt>
                    <dd class="md:col-span-2 flex flex-col gap-1">
                        <span class="font-mono text-lg text-ink-black"
                            >5 GB</span
                        >
                        <span class="text-sm text-slate-gray"
                            >USB stick, SD card, or HDD/SSD.</span
                        >
                    </dd>
                </div>

                <!-- Boot Media -->
                <div class="py-4 grid grid-cols-1 md:grid-cols-3 gap-4">
                    <dt
                        class="font-sans font-bold text-ink-black uppercase tracking-wider text-sm"
                    >
                        Boot Media
                    </dt>
                    <dd class="md:col-span-2 flex flex-col gap-1">
                        <span class="font-mono text-lg text-ink-black"
                            >USB / CD / DVD</span
                        >
                        <span class="text-sm text-slate-gray"
                            >BIOS or UEFI. Secure boot supported.</span
                        >
                    </dd>
                </div>
            </dl>
        </div>
    </div>
</section>
